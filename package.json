{
  "name": "kaiten-ext",
  "displayName": "Kaiten",
  "description": "Kaiten in VSCode",
  "version": "0.0.5",
  "repository": {
		"type": "git",
    "url": "https://github.com/Xride720/vscode-kaiten-ext"
  },
  "license": "MIT",
  "publisher": "XRide720",
  "icon": "assets/logo_stroke.png",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Kaiten",
      "properties": {
        "kaiten.apiKey": {
          "type": "string",
          "default": "",
          "description": "Ключ доступа API."
        },
        "kaiten.url": {
          "type": "string",
          "default": "",
          "description": "Адрес сервера Kaiten."
        }
      }
    },
    "commands": [
      {
        "command": "kaiten.task.refresh",
        "category": "Kaiten",
        "title": "Обновить",
        "icon": "$(settings-sync-view-icon)"
      },
      {
        "command": "kaiten.task.open",
        "category": "Kaiten",
        "title": "Открыть задачу в Kaiten",
        "icon": "$(ports-open-browser-icon)"
      },
      {
        "command": "kaiten.time-log.refresh",
        "category": "Kaiten",
        "title": "Обновить",
        "icon": "$(settings-sync-view-icon)"
      },

      {
        "command": "kaiten.checklist.add",
        "category": "Kaiten",
        "title": "Добавить чек-лист",
        "icon": "$(terminal-new)"
      },
      {
        "command": "kaiten.checklist.edit",
        "category": "Kaiten",
        "title": "Редактировать чек-лист",
        "icon": "$(settings-edit)"
      },
      {
        "command": "kaiten.checklist.delete",
        "category": "Kaiten",
        "title": "Удалить чек-лист",
        "icon": "$(panel-close)"
      },
      {
        "command": "kaiten.checklist.add-item",
        "category": "Kaiten",
        "title": "Добавить пункт чек-листа",
        "icon": "$(terminal-new)"
      },
      {
        "command": "kaiten.checklist.edit-item",
        "category": "Kaiten",
        "title": "Редактировать пункт чек-листа",
        "icon": "$(settings-edit)"
      },
      {
        "command": "kaiten.checklist.delete-item",
        "category": "Kaiten",
        "title": "Удалить пункт чек-листа",
        "icon": "$(panel-close)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kaiten",
          "title": "Kaiten",
          "icon": "assets/logo_fill.svg"
        }
      ]
    },
    "views": {
      "kaiten": [
        {
          "type": "webview",
          "id": "kaiten.task",
          "name": "Задача"
        },
        {
          "type": "webview",
          "id": "kaiten.time-log",
          "name": "Учёт времени"
        },
        {
          "id": "kaiten.checklist",
          "name": "Чек-листы"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "kaiten.task.open",
          "group": "navigation",
          "when": "view == kaiten.task"
        },
        {
          "command": "kaiten.task.refresh",
          "group": "navigation",
          "when": "view == kaiten.task || view == kaiten.checklist"
        },
        {
          "command": "kaiten.time-log.refresh",
          "group": "navigation",
          "when": "view == kaiten.time-log"
        },
        {
          "command": "kaiten.checklist.add",
          "group": "navigation",
          "when": "view == kaiten.checklist"
        }
      ],
      "view/item/context": [
        {
          "command": "kaiten.checklist.edit",
          "group": "inline@2",
          "when": "viewItem == kaiten.checklist.checklist"
        },
        {
          "command": "kaiten.checklist.delete",
          "group": "inline@3",
          "when": "viewItem == kaiten.checklist.checklist"
        },
        {
          "command": "kaiten.checklist.add-item",
          "group": "inline@1",
          "when": "viewItem == kaiten.checklist.checklist"
        },
        {
          "command": "kaiten.checklist.edit-item",
          "group": "inline@2",
          "when": "viewItem == kaiten.checklist.checklistItem"
        },
        {
          "command": "kaiten.checklist.delete-item",
          "group": "inline@3",
          "when": "viewItem == kaiten.checklist.checklistItem"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vsce:publish": "vsce publish",
    "vsce:package": "vsce package"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.6",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "@vscode/codicons": "^0.0.33",
    "node-fetch": "^3.3.2"
  },
  "extensionDependencies": [
    "vscode.git"
  ]
}
